---
import { getCollection } from 'astro:content';

import BaseLayout from '../layouts/BaseLayout.astro';

import ContactCTA from '../components/ContactCTA.astro';
import PortfolioListUX from '../components/PortfolioListUX.astro';
import Grid from '../components/Grid.astro';
import HeroContent from '../components/HeroContent.astro';

const projects = (await getCollection('ux')).sort(
	(a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);



const { name, url } = Astro.props;
---

<BaseLayout
	title="My UX Design Work"
	description="See some of my user-centered UX design case studies below."
>


	<HeroContent pageTitle='Case Studies' pageSummary='See some of my user-centered UX design case studies below..' />


	<main class="container content" data-type="wide">
		<Grid>
			{
				projects.map((project) => (
					<li>
						<PortfolioListUX project={project} />
					</li>
				))
			}
		</Grid>
	</main>
	<ContactCTA />
	
</BaseLayout>

<style>
	.content {
		margin: 1rem auto 5rem;
	}
</style>