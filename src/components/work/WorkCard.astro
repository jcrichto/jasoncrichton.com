---
import { Image } from "astro:assets";

interface Props {
	name: string;
	slug: string;
}

const { name, slug } = Astro.props;
---

<a class="card" href={`/work/${slug}`}>
    <img src={`../../assets/work/${slug}/listing.jpg`} alt={name || ''} />
	<span class="title">{name}</span>
</a>

<style>
	.card {
		display: grid;
		grid-template: auto 1fr / auto 1fr;
		height: 11rem;
		background: #fff;
		border-radius: 0.75rem;
		overflow: hidden;
		box-shadow: var(--shadow-sm);
		text-decoration: none;
		transition: box-shadow var(--theme-transition);
		position: relative;
	}

	.card:hover {
		box-shadow: var(--shadow-md);
	}

	.title {
		margin: 0.5rem;
		padding: 0.5rem 1rem;
		color: #333;
		border-radius: 0.375rem;
		font-weight: 700;
		background-color: rgba(255, 255, 255, 0.8);
		position: absolute;
		bottom: 1em;
		left: 1em;
	}

	img {
		grid-area: 1 / 1 / 3 / 3;
		width: 100%;
		height: 100%;
		object-fit: cover;
	}


	@media (min-width: 50em) {
		.card {
			height: 22rem;
		}

	}
</style>
