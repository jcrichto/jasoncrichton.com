---
interface Props {
	greeting: string;
	overview?: string;
	align?: 'start' | 'center';
}

const { align = 'center', overview, greeting } = Astro.props;
---

<section class:list={['hero stack gap-4', align]}>
	<div class="stack gap-2">
		<div class="greeting">{greeting}</div>
		{overview && <h1 class="overview">{overview}</h1>}
	</div>
	<slot />
</section>

<style>
  .hero {
    height: 100vh;
    background: url('./assets/hero-01.jpg') no-repeat;
    background-position: center bottom -60px;
    background-size: cover;
    /* position: fixed; */
    width: 100%;
  }


	.greeting {
		/* font-size: var(--text-xl); */
		font-size: clamp(2rem, -0.875rem + 8.333vw, 1rem);
		color: var(--gray-0);
	}

	.overview {
		font-size: clamp(1rem, -0.875rem + 8.333vw, 1rem);
		font-weight: 400; 
	}

	@media (min-width: 50em) {

	}
</style>
