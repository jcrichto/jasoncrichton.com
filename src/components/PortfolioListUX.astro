---
import type { CollectionEntry } from 'astro:content';
import { Image } from "astro:assets";

interface Props {
	project: CollectionEntry<'ux'>;
}

const { data, slug } = Astro.props.project;
---

<a class="card" href={`/ux/${slug}`}>
	
	<Image src={data.img} alt={data.img_alt || ''} width="600" loading="lazy" decoding="async" />
	<span class="title">{data.title}</span>
</a>

<style>
	.card {
		display: grid;
		grid-template: auto 1fr / auto 1fr;
		height: 11rem;
		background: #fff;
		border-radius: 0.75rem;
		overflow: hidden;
		box-shadow: var(--shadow-sm);
		text-decoration: none;
		transition: box-shadow var(--theme-transition);
		position: relative;
	}

	.card:hover {
		box-shadow: var(--shadow-md);
	}

	.title {
		margin: 0.5rem;
		padding: 0.5rem 1rem;
		color: #333;
		border-radius: 0.375rem;
		font-weight: 700;
		background-color: rgba(255, 255, 255, 0.8);
		position: absolute;
		bottom: 0;
		left: 0;
	}

	img {
		grid-area: 1 / 1 / 3 / 3;
		width: 100%;
		height: 100%;
		object-fit: cover;
	}


	@media (min-width: 50em) {
		.card {
			height: 22rem;
		}

	}
</style>
